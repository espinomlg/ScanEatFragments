<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/listitem_dish_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listitem_dish_image"
            android:layout_toEndOf="@+id/listitem_dish_image"
            android:textSize="@dimen/text_big"
            android:id="@+id/listitem_dish_dishname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/listitem_dish_dishname"
            android:layout_toRightOf="@+id/listitem_dish_image"
            android:layout_toEndOf="@+id/listitem_dish_image"
            android:textSize="@dimen/text_normal"
            android:id="@+id/listitem_dish_resutaurant" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:id="@+id/listitem_dish_prices"
            android:layout_alignBaseline="@id/listitem_dish_dishname"
            android:layout_alignLeft="@+id/listitem_dish_rating"
            android:layout_alignStart="@+id/listitem_dish_rating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listitem_dish_prices"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/listitem_dish_resutaurant"
            android:textSize="@dimen/text_normal"
            android:id="@+id/listitem_dish_rating" />

    </RelativeLayout>

</android.support.v7.widget.CardView>